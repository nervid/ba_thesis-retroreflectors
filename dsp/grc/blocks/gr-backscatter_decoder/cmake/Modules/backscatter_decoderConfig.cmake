INCLUDE(FindPkgConfig)
PKG_CHECK_MODULES(PC_BACKSCATTER_DECODER backscatter_decoder)

FIND_PATH(
    BACKSCATTER_DECODER_INCLUDE_DIRS
    NAMES backscatter_decoder/api.h
    HINTS $ENV{BACKSCATTER_DECODER_DIR}/include
        ${PC_BACKSCATTER_DECODER_INCLUDEDIR}
